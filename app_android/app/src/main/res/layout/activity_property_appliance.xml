<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appl_maint_mngt.views.property_appliance.PropertyApplianceActivity">

    <TextView
        android:id="@+id/propertyappliance_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/propertyappliance_button_gendiagrep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.14"
        android:text="@string/generate_diagnostic_report"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/propertyappliance_textview_title"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="88dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/propertyappliance_button_gendiagrep"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/cardView">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/propertyappliance_textview_age_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.14"
                android:text="@string/propertyappliance_age_label"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/propertyappliance_textview_age_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="174dp"
                android:layout_weight="1"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="478dp"
                android:layout_marginEnd="174dp" />
            <TextView
                android:id="@+id/propertyappliance_textview_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/propertyappliance_status_label"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/propertyappliance_textview_age_label"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/propertyappliance_textview_status_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="174dp"
                android:layout_marginTop="30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/propertyappliance_textview_age_value"
                android:layout_marginEnd="174dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
            android:layout_width="364dp"
            android:layout_height="171dp"
            android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/cardView2">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/propertyappliance_textview_appl_productno_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/appliance_productno_label"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/propertyappliance_textview_appl_productno_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="181dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="181dp" />

                <TextView
                    android:id="@+id/propertyappliance_textview_appl_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/appliance_name_label"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/propertyappliance_textview_appl_productno_label"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/propertyappliance_textview_appl_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="156dp"
                    android:layout_marginTop="37dp"
                    android:layout_weight="1"
                    app:layout_constraintHorizontal_bias="0.825"
                    app:layout_constraintLeft_toRightOf="@+id/propertyappliance_textview_appl_name_label"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/propertyappliance_textview_appl_productno_value"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="156dp" />

                <TextView
                    android:id="@+id/propertyappliance_textview_appl_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/appliance_type_label"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/propertyappliance_textview_appl_name_label"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/propertyappliance_textview_appl_type_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="181dp"
                    android:layout_marginTop="23dp"
                    android:layout_weight="1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/propertyappliance_textview_appl_name_value"
                    android:layout_marginEnd="181dp" />

                <TextView
                    android:id="@+id/propertyappliance_textview_appl_brand_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/appliance_brand_label"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toBottomOf="@+id/propertyappliance_textview_appl_type_label"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/propertyappliance_textview_appl_brand_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="181dp"
                    android:layout_marginTop="27dp"
                    android:layout_weight="1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/propertyappliance_textview_appl_type_value"
                    android:layout_marginEnd="181dp" />
            </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="364dp"
        android:layout_height="400dp"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ListView
                android:id="@+id/propertyappliance_listview_stathistory_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
