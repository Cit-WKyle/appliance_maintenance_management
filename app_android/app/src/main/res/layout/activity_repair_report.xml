<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appl_maint_mngt.views.repair_report.RepairReportActivity">

    <TextView
        android:id="@+id/repair_report_textview_desc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate_diagnostic_report_hint_description"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/repair_report_textview_desc_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="40dp" />

    <TextView
        android:id="@+id/repair_report_textview_dur_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pend_repair_rep_duration_text"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/repair_report_textview_desc_label"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/repair_report_textview_dur_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="38dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repair_report_textview_desc_value"
        android:layout_marginEnd="38dp" />

    <TextView
        android:id="@+id/repair_report_textview_onsite_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pend_repair_rep_onsite_text"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/repair_report_textview_dur_label"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/repair_report_textview_onsite_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="39dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repair_report_textview_dur_value"
        android:layout_marginEnd="39dp" />

    <TextView
        android:id="@+id/repair_report_textview_cost_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pend_repair_rep_cost_text"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/repair_report_textview_onsite_label"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/repair_report_textview_cost_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="39dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repair_report_textview_onsite_value"
        android:layout_marginEnd="39dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/repair_report_cardview_sched"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="94dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repair_report_textview_cost_label"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/repair_report_textview_sched_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/repair_report_sched_title"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/repair_report_textview_sched_stattime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="25dp"
                android:text=""
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/repair_report_textview_sched_title"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/repair_report_textview_sched_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="25dp"
                android:text=""
                app:layout_constraintLeft_toRightOf="@+id/repair_report_textview_sched_stattime"
                app:layout_constraintTop_toBottomOf="@+id/repair_report_textview_sched_title"
                android:layout_marginStart="80dp" />

            <TextView
                android:id="@+id/repair_report_textview_sched_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:text=""
                app:layout_constraintLeft_toRightOf="@+id/repair_report_textview_sched_endtime"
                app:layout_constraintTop_toBottomOf="@+id/repair_report_textview_sched_title"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="16dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/repair_report_cardview_sched"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/repair_report_cardview_pending_manager_sched">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/repair_report_textview_pending_manager_sched_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pending_manager_sched_title"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

            <ListView
                android:id="@+id/repair_report_listview_pending_manager_sched"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/repair_report_cardview_pending_engineer_sched"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repair_report_cardview_pending_manager_sched">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/repair_report_textview_pending_engineer_sched_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pending_engineer_sched_title"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

            <ListView
                android:id="@+id/repair_report_listview_pending_engineer_sched"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
